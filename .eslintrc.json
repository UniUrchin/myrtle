{
  "extends": [
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/warnings",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["chakra-ui"],
  "parserOptions": {
    "project": true,
    "tsconfigRootDir": "./"
  },
  "rules": {
    "chakra-ui/props-order": "error",
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
